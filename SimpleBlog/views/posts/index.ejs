<!-- views/posts/index.ejs -->
<!DOCTYPE html>
<html>
    <head>
        <% include ../partials/head %>
    </head>
    <body>
        <% include ../partials/nav %>

        <div class="container post post-index">            
            <% include ./partials/header %> 
            
            <div class="buttons">
                <a class="btn btn-info" href="/posts/new">New</a>
            </div>
            
            <table class="table table-striped posts">
                <thead>
                    <tr>
                        <th class="title">Title</th>
                        <th class="ahthor">Author</th>
                        <th class="date">Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(posts == null || posts.length == 0){ %>
                    <tr>
                        <td class="noData" colspan="100"> Not Data Found </td>
                    </tr>
                    <% } %>
                    <% posts.forEach(function(post) { %>
                    <tr>
                        <td class="title">
                            <a href="/posts/<%= post._id %>"><div class="ellipsis"><%= post.title %></div></a>
                        </td>
                        <td class="author">
                            <div class="ellipsis"><%= post.author ? post.author.username : "" %></div>
                        </td>
                        <td class="date">
                            <%= post.createdDate %>
                        </td>                        
                    </tr>
                    <% }) %>
                </tbody>
            </table>

        </div><!-- container end -->
    </body>
</html>